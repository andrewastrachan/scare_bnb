
<div class="carousel-container">

</div>

<div class="show-container-main">

	<div class="listing-profile-title">
		<!-- span across the whole thing --> 

		<div class="listing-profile-title-box listing-container">


			<div class="profile-circle">
				<img class="profile-image" src="http://americanmuslimconsumer.com/wp-content/uploads/2013/09/blank-user.jpg" alt="<%= this.model.owner().escape('gravatar_url') %>">
			</div>

			<div class="listing-title">
				<h3><%= listing.escape('title') %></h3>
			</div>

			<div class="listing-location">
				<%= listing.escape('city') %>, <%=listing.escape('state')%>, United States
			</div>
	</div>

	<div class='listing-content listing-container listing-text'>
		<h4 class="listing-text">
			About This Listing
		</h4>
		
		<p><%= listing.escape('summary') %></p>

		<div>
			<% if (listing.images().models.length > 0) { %>

				<img class = "image-box" src="<%= listing.images().models[0].escape('url') %>"

			<% } %>

			</div>

		<hr>

		<div class="left-aligned-listing-info">Description</div>

		<div class="description-text">
			<div id="the-space">The Space</div>
			<div id="description-here"><%=listing.escape('description')%>
		</div>


	</div>

	<div class="booking-container">
		<div class="price">
			<div class="price-amount"><h1>$<%= listing.escape('price') %></h1></div>
			<div class="price-timeline">Per Night</div>
		</div>

		<div class="booking-form">
			<div>
				<form>
				  	<div class="form-group">

					    <div class="input-group date">
					      	<label for="check-in" class="booking-label">Check In</label>

					      	<input id="check-in" class="booking-form-input" type="text" name="reservation[check_in]" placeholder="mm/dd/yyyy">
					    </div>

					    <div class="input-group date">
					      	<label for="check-out" class="booking-label">Check Out</label>

					      	<input id="check-out" class="booking-form-input" type="text" name="resevation[check_out]" placeholder="mm/dd/yyyy">
					    </div>

				 	</div>

				    
					<button type="submit" class="booking-button button-waiting">Request to Book</button>
				</form>
			</div>
		<div> 	
	</div>
</div>