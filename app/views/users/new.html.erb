<div class="container">

	<form action="/users" method="post" class="form-signin" role="form">
			<h1 class="form-signin-signup-heading">Sign Up</h2>
		
		<input 
			type="hidden" 
			name="authenticity_token" 
			value="<%= form_authenticity_token %>">
	
		<label for="name" class="sr-only">Name</label>
		<input 
			id="name"
			type="text"
			name="user[name]"
			class="form-control"
			placeholder="Name">
		<br>
	
		<label for="email" class="sr-only">Email</label>
		<input 
			id="email"
			type="text"
			name="user[email]"
			class="form-control"
			placeholder="Email address"
			value="">
	
		<br>
		
		<label for="password" class="sr-only">Password</label>
		<input 
			id="password"
			type="password"
			name="user[password]"
			class="form-control"
			placeholder="Password">
	
		<br>
	
		<button 
				class="btn btn-lg btn-primary btn-block" 				
				type="submit">Sign Up</button>
	
	</form>

</div>