<h1>Sign In</h1>

<form action="/session" method="post">
	<input 
		type="hidden" 
		name="authenticity_token" 
		value="<%= form_authenticity_token %>">	
		
	<label>Email
	<input 
		type="text"
		name="user[email]">
	</label>
	
	<br>
		
	<label>Password
	<input 
		type="text"
		name="user[password]">
	</label>
	
	<br>
	
	<input type="submit" value="Sign In">
	
</form>